<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.inicio.createpassword">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="160dp"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="179dp"
            android:src="@mipmap/ic_security"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/textindicator"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="95dp"
            android:text="@string/createpass"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/firstContra"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textindicator"

            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="78dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="73dp"
            android:inputType="number"
            android:hint="@string/creeContra" />

        <EditText
            android:id="@+id/firstContraverific"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/firstContra"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="78dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="73dp"
            android:hint="@string/verifique_contra" />

        <Button
            android:id="@+id/create"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/firstContraverific"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="133dp"
            android:layout_marginTop="73dp"
            android:text="@string/crear"
            android:layout_marginEnd="128dp" />
    </RelativeLayout>
</layout>